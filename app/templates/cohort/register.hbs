<h1 class="md-display-2">{{cohort.display_name}}</h1>
<h2 class="md-display-1">Register your project</h2>

<h3 class="md-title">Notes:</h3>
<h3 class="md-subhead">Please ensure that you use a complete URL "http://example.com" in the fields calling for a URL below.</h3>



{{#if errorMessage}}
  {{#md-toolbar class="md-warn"}}
    <div class="md-toolbar-tools">
        <h2 class="md-flex">{{errorMessage}}</h2>
    </div>
  {{/md-toolbar}}
{{/if}}



  <form {{action "createProject" on="submit"}}>
  <md-content class="md-padding" layout="row" layout-lg="column">
      {{#md-input-container value=model.app_name}}
          <label>App Name</label>
          {{md-input }}
      {{/md-input-container}}

  </md-content>


  <md-content class="md-padding" layout="row" layout-sm="column">
      {{#md-input-container value=model.app_url}}
          <label>App Url</label>
          {{md-input }}
      {{/md-input-container}}

      {{#md-input-container value=model.tech_used}}
          <label>Tech Used</label>
          {{md-input }}
      {{/md-input-container}}
  </md-content>

      {{#md-input-container value=model.rationale}}
          <label>Rationale</label>
          {{md-textarea columns="1" md-maxlength="150"}}
      {{/md-input-container}}


  {{#md-button class="md-raised md-primary"}}Create Project{{/md-button}}

</form>

{{outlet}}
