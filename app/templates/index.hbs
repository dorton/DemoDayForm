<div class="display-content" layout="column" style="padding-bottom: 15px;">
  <md-content class="md-padding">
    <h2 class="md-display-2">Select a Cohort</h2>
      {{#each model key="id" as |cohort|}}
        <!-- <md-content> -->
          <md-card>
            <md-card-content>
              <h3 class="md-display-1">{{cohort.city}}</h3>
              <h1 class="md-title">Demo Day Date</h1>
                {{#md-list}}
                  {{#md-list-item}}
                      {{#md-button class="md-primary md-hue-1"}}
                        <a href="#" {{action 'assignCohort' cohort }}>{{cohort.demo_day_date}}</a>
                      {{/md-button}}
                  {{/md-list-item}}
                {{/md-list}}
            </md-card-content>
          </md-card>
        <!-- </md-content> -->
      {{/each}}
    {{outlet}}
  </md-content>
</div>
